      <GridPane prefHeight="70.0" prefWidth="350.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="username" prefHeight="25.0" prefWidth="350.0" promptText="Username" />
            <PasswordField fx:id="password" prefHeight="25.0" prefWidth="350.0" promptText="Password" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </content>
</fx:root>
